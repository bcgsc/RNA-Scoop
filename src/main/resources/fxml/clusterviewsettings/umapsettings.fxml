<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<HBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.clusterview.UMAPSettingsController"
      alignment="CENTER">
    <VBox.margin>
        <Insets topRightBottomLeft="10"/>
    </VBox.margin>
    <HBox>
        <HBox.margin>
            <Insets right="40"/>
        </HBox.margin>
        <Text text="Min. Distance: ">
            <HBox.margin>
                <Insets top="5" right="5"/>
            </HBox.margin>
        </Text>
        <TextField fx:id="minDistField" onAction="#handleChangedMinDist" prefWidth="70"/>
    </HBox>
    <HBox>
        <Text text="Nearest Neighbors: ">
            <HBox.margin>
                <Insets top="5" right="5"/>
            </HBox.margin>
        </Text>
        <TextField fx:id="nearestNeighborsField" text="1000" onAction="#handleChangedNearestNeighbors" prefWidth="70"/>
    </HBox>
</HBox>
